<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.RecomMapper">

	<insert id="recomWrite" parameterType="Rdto">
		insert into recom values (seq_recom.nextval, #{seq}, #{re_content}, #{re_writer}, sysdate)
	</insert>
	
	<select id="recomList" parameterType="java.util.Map" resultType="Rdto">
		<![CDATA[
		select rno, seq, name, re_content, re_writer,
		to_char(re_logtime, 'YYYY.MM.DD') as logtime 
		from(select rownum rn, tt.* from
		(select * from recom order by seq desc) tt)
		where rn>=#{startNum} and rn<=#{endNum}
		]]>
	</select>

<!-- 댓글 조회 -->	
	<select id="recomView" parameterType="int" resultType="Rdto">
		select * from recom where seq=#{seq}
	</select>
	
	
</mapper>